/**app.wxss**/
@import 'common/css/common.wxss';
.hide{display: none;}

.orderInfoScroll .box .iconCommon{color: #a7a7a7;}
/* orderInfoScroll */
.orderInfoScroll{height: calc(100% - 105rpx);}
.orderInfoScroll .box{background-color: var(--color24);}
.orderInfoScroll .box .commonB{padding: 32rpx 35rpx 0 28rpx;background-color: var(--white);margin-bottom: 23rpx;}
.orderInfoScroll .box .commonTitle{font-size: 30rpx;font-weight: 700;padding-bottom: 25rpx;color:var(--color27);}
.orderInfoScroll .box .commonTitle .icon_arrow_right{font-size: 30rpx;color:var(--color27);}
/* 门店信息 start */
.orderInfoScroll .box .guide.fullPageInfo {height: 100%;}
.orderInfoScroll .box .guide .guideTop {padding-bottom: 15rpx;}
.orderInfoScroll .box .guide .guideTop .guideTopLeft {/*display: flex;*/align-items: center;}
.orderInfoScroll .box .guide .guideTop .guideTopLeft .iconfont {margin-right: 16rpx;font-size: 34rpx;font-weight: 700;}

.orderInfoScroll .box .guide .guideTop .guideTopLeft .storeName {font-size: 33.39rpx;font-weight: 700;margin-right: 10rpx;}
.orderInfoScroll .box .guide .guideTop .guideTopRight {font-size: 24rpx;}
/* .orderInfoScroll .box .guide .distance {color: #878787;font-size: 24rpx;margin: 0 auto;min-height: 70rpx;padding-top: 4rpx;padding-bottom: 13rpx;border-bottom: 1px solid #f1f1f1;line-height: 1.4;} */
.orderInfoScroll .box .guide .distance {color: var(--color4);font-size: 24.37rpx;margin: 4rpx 0 40rpx 0;}
.orderInfoScroll .box .guide .distance .icon_star_empty{font-size: 14rpx;vertical-align:middle;}
.orderInfoScroll .box .orderInfoScroll .box .guide .distance .icon_star_empty{font-size: 12px;}
.orderInfoScroll .box .guide .userTelBox{width: 100%;display: flex;justify-content: space-between;align-items: center;padding: 25rpx 0;font-size: 30rpx;color:var(--color27);}
.orderInfoScroll .box .guide .userTelBox .right{display: flex;justify-content: space-between;align-items: center;}

.orderInfoScroll .box .guide .userTelBox .right .btnTel{font-size: 20rpx;color: var(--color3);
  width: 93rpx;height: 39rpx;border: 2rpx solid var(--color3);text-align: center;line-height: 39rpx;border-radius: 5rpx;position: relative;margin-left: 22rpx;}
.orderInfoScroll .box .guide .userTelBox .right .phoneBox{width: 100%;height: 100%;position: absolute;top: 0;left: 0;opacity: 0;}
/* 门店信息 end */

/* 商品列表 */
.orderInfoScroll .box .flexBox{display: flex;justify-content: space-between;align-items: center;}
.orderInfoScroll .box .cardListBox .listContent .listContentItem{display: flex;justify-content: space-between;align-items: center; margin-bottom: 50rpx;}
.orderInfoScroll .box .cardListBox .listContent .listContentItem>view{height: 100%;}
.orderInfoScroll .box .cardListBox .listContent  .listContentItem .left{justify-content: flex-start;}
.orderInfoScroll .box .cardListBox .listContent  .listContentItem .right{font-size: 30rpx;text-align: right;margin-top: 112rpx;}
.orderInfoScroll .box .cardListBox .flexBox{ font-size: 30rpx;color:var(--color27);}
.orderInfoScroll .box .cardListBox .couponBox .tips{color: #cacaca;}
/* totalBox */
.totalBox{padding-bottom: 44rpx;font-size: 30rpx;color:var(--color20);text-align: center; }
.totalBox .icon_money{font-weight: 700;color:var(--color20);font-size: 40rpx;}

/* cardDetailListCard */
.orderInfoScroll .box .cardDetailListCard{overflow: hidden;margin-left: 15rpx;}
.orderInfoScroll .box .cardDetailListCard .img{width: 140rpx;height: 140rpx;float: left;}
.orderInfoScroll .box .cardDetailListCard .info{float: left;margin-left: 25rpx;}
.orderInfoScroll .box .cardDetailListCard .info .txt1{font-size: 27rpx;color: var(--color1);}
.orderInfoScroll .box .cardDetailListCard .info .txt2{font-size: 20rpx;color: var(--color4);margin-top: 22rpx;display: block;max-width: 450rpx;line-height: 1.4;}
.orderInfoScroll .box .cardDetailListCard .info .txt3{color: var(--color7);font-weight: 700;font-size: 32rpx;margin-top: 30rpx;display: block;}

/* orderMoneyBox */
.orderMoneyBox{height: 100rpx;background-color: #fefefe;display: flex;justify-content: space-between;align-items: center;padding: 0 40rpx 0 35rpx;}
.orderMoneyBox .totalBox{padding-bottom: 0;}
.orderMoneyBox .btnPayment{width: 110rpx;height: 50rpx;line-height: 50rpx;background-color: var(--color3);text-align: center;color: var(--white);border-radius: 25rpx;font-size: 27rpx;}
.isOrderBox {background-color: #000;position: absolute;bottom: 0;left: 0;width: 100%;}
.isOrderBox  .btnPayment{background-color: #000;width: auto;}
.isOrderBox .totalBox .icon_money{color: #fff;}


/* 支付方式 */
.orderInfoScroll .box .paymentTypeBox{padding: 32rpx 33rpx;font-size: 30rpx;}
.orderInfoScroll .box .paymentTypeBox .icon_wx2{margin-right: 17rpx;color: #70bf58;}
/* 2行超出截断 */
.overtext2 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2;}

/* popup_cardDetailList */
.popup_cardDetailList {background-color: #fff;height: 850rpx;box-sizing: border-box;}
.popup_cardDetailList .topBar {height: 92rpx;display: flex;justify-content: space-between;align-items: center;padding: 0 33rpx;border-bottom: 1px solid #f1f1f1;}
.popup_cardDetailList .topBar .colse{color: #7e7e7e;width: 50rpx;height: 50rpx;text-align: center;}
.popup_cardDetailList .topBar .title{font-size: 32rpx;text-align:center;}
.popup_cardDetailList .topBar .totalNum{color: #7e7e7e;}
.popup_cardDetailList .scrollList{height: calc(100% - 102rpx);}
.popup_cardDetailList .scrollList .popup_Scroll{height: 100%;}
.popup_Scroll .cardDetailListCard{height: 175rpx;display: flex;justify-content: space-between;align-items: center;margin: 0 36rpx;box-sizing: border-box;border-bottom: 1px solid #f1f1f1;}
.popup_Scroll .cardDetailListCard .cardDetailListCardLeft {text-align: center;width: 180rpx;}
.popup_Scroll .cardDetailListCard .cardDetailListCardLeft .img{width: 120rpx;}
.popup_Scroll .cardDetailListCard .cardDetailListCardRight{flex-grow: 1;display: flex;justify-content: space-between;align-items: flex-start;font-size: 30rpx; }
.popup_Scroll .cardDetailListCard .cardDetailListCardRight .right{text-align: right;padding-left: 20rpx;}
.popup_Scroll .cardDetailListCard .cardDetailListCardRight .left{max-width: 380rpx;}
.popup_Scroll .cardDetailListCard .cardDetailListCardRight .left view:last-child,
.popup_Scroll .cardDetailListCard .cardDetailListCardRight .right text:last-child{color: #7e7e7e;font-size: 26rpx;}

/* noticeBar */
.noticeBar{font-size: 26rpx!important;}

.orderInfoScroll .guideTopRight{width: 700rpx;height: 130rpx; margin: 0 auto;display: flex;justify-content:space-between;align-items: center;}
.orderInfoScroll .guideTopRight .type{width: 335rpx;height: 128rpx;display: flex;justify-content:center;align-items: center;border: 3rpx solid var(--color24);color: var(--color31);font-size: 32rpx;}
.orderInfoScroll .guideTopRight .type .iconfont {font-size: 54rpx;margin-right: 25rpx;}
.orderInfoScroll .guideTopRight .type.active{border: none;background-image: url(data:image/png;base64,);color: var(--color3);}

.orderInfoScroll .adressBox{color: var(--color31);font-size: 32rpx;line-height: 1.4;padding:0 0 30rpx;}
/* remarksBox */
.orderInfoScroll .box .cardListBox .remarksBox{height: 83rpx;border-top: 1rpx solid var(--color44);padding-left: 15rpx;}
.orderInfoScroll .box .cardListBox .remarksBox  .right{color: var(--color46);max-width: 80%;display: flex;font-size: 23rpx;}
.orderInfoScroll .box .cardListBox .remarksBox  .right .txt{width: 100%;}
.orderInfoScroll .box .cardListBox .remarksBox .iconCommon{display: inline-block;padding-left: 45rpx;padding-right: 25rpx;color: var(--color45);font-size: 23rpx;}
/* RunningMoney */
.orderInfoScroll .box .cardListBox .RunningMoney{height: 83rpx;border-top: 1rpx solid var(--color44);padding-left: 15rpx;}
.orderInfoScroll .box .cardListBox .RunningMoney  .right{color: var(--color45);padding-right: 25rpx;font-size: 23rpx;}
/* totalBox */
.orderInfoScroll .box .cardListBox .totalBox{padding-bottom: 50rpx;text-align: right; }
.orderInfoScroll .box .cardListBox .totalBox .icon_money{font-size: 35rpx;color:var(--color20);}
