/* 底部 s */
.receiveAddress .footer {
  position: fixed;
  width: 100%;
  text-align: center;
  bottom: 70rpx;
  left: 0;
}
.receiveAddress .footer .addAddress {
  width: 554rpx;
  height: 61rpx;
  text-align: center;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.receiveAddress .footer .addAddress1{
  color: var(--white);
  margin-bottom: 25rpx;
  background-color: var(--color3);
}
.receiveAddress .footer .addAddress2{
  color: var(--color27);
  background-color: var(--color35);
}
.receiveAddress .footer .addAddress text {
  vertical-align: middle;
  font-size: 26rpx;
}

