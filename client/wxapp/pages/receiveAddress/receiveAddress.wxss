page{width: 100%;height: 100%;}
.receiveAddress{width: 100%;height: 100%;background-color: var(--color34);border-top: 1rpx solid transparent;}
/* 空数据 s */
.receiveAddress .empty {
  text-align: center;
  color: var(--color28);
  font-size: 30rpx;
  margin-top: 125rpx;
  display: none;
}
.receiveAddress .empty>view:last-child{
  margin-top:30rpx;
}
.receiveAddress .empty.show {
  display: block;
}
/* 空数据 e */

/* 底部 s */
.receiveAddress .footer {
  position: fixed;
  width: 100%;
  text-align: center;
  bottom: 70rpx;
  left: 0;
}
.receiveAddress .footer .addAddress {
  width: 554rpx;
  height: 61rpx;
  text-align: center;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.receiveAddress .footer .addAddress1{
  color: var(--white);
  margin-bottom: 25rpx;
  background-color: var(--color3);
}
.receiveAddress .footer .addAddress2{
  color: var(--color27);
  background-color: var(--color35);
}
.receiveAddress .footer .addAddress text {
  vertical-align: middle;
  font-size: 26rpx;
}

