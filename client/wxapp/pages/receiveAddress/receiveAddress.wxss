page{width: 100%;height: 100%;}
.receiveAddress{width: 100%;height: 100%;background-color: #f7f7f7;border-top: 1rpx solid transparent;}
/* 空数据 s */
.receiveAddress .empty {
  text-align: center;
  color: #cccbcb;
  font-size: 30rpx;
  margin-top: 400rpx;
  display: none;
}
.receiveAddress .empty.show {
  display: block;
}
/* 空数据 e */

/* 底部 s */
.receiveAddress .footer {
  position: fixed;
  width: 100%;
  text-align: center;
  bottom: 40rpx;
  left: 0;
}
.receiveAddress .footer .addAddress {
  display: inline-block;
  width: 670rpx;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  background-color: #424141;
  border-radius: 6rpx;
}

.receiveAddress .footer .addAddress text {
  vertical-align: middle;
  font-size: 34rpx;
}

.receiveAddress .footer .addAddress text:first-child {
  font-size: 20rpx;
  margin-right: 10rpx;
}
/* 底部 e */

/* listBox*/
.listBox{height: calc(100% - 176rpx);}
.listBox .flexBox{display: flex;justify-content: space-between;align-items: center;} 
.listBox .listBoxScroll{height: 100%;width: 100%;}
.listBox .listBoxScroll .box{height: 100%;padding-top: 76rpx;box-sizing: border-box;}
.listBox .listBoxScroll .listItem {padding: 0 60rpx 0 30rpx;background-color: #ffffff;margin-bottom: 35rpx;}
.listBox .listBoxScroll .listItem .left{width: 627rpx;height: 100%; box-sizing: border-box;padding: 30rpx 0;font-size: 30rpx;}
.listBox .listBoxScroll .listItem .left .txt:first-child{margin-bottom: 15rpx;}
.listBox .listBoxScroll .listItem .left .txt text:last-child{margin-left: 15rpx;}
.listBox .listBoxScroll .listItem .right{font-size: 26rpx;}