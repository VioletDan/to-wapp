view { position: relative; }
page{width: 100%;height: 100%;}
.receiveAddress{width: 100%;height: 100%;background-color: var(--color34);border-top: 1rpx solid transparent;}
/* 空数据 s */
.receiveAddress .empty {
  text-align: center;
  color: var(--color28);
  font-size: 30rpx;
  margin-top: 125rpx;
  display: none;
}
.receiveAddress .empty>view:last-child{
  margin-top:30rpx;
}
.receiveAddress .empty.show {
  display: block;
}
