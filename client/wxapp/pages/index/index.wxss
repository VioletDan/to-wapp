/**标准16:9*/
.content{width: 100%;height: 100%;}
.module{top:0; bottom: 0;position: absolute;left: 0;width: 100%;height: calc(100% - 104rpx);}
#myVideo{width: 100%;height: 100%;z-index: 10;position: absolute;top: 0;left: 0;}

/* shopInfo */
.shopInfo{width: 100%;height: 100%;}
.shopInfo .box {width: 100%;height: 100%;}
.shopInfo .conBox .bg{width: 100%;height: 100%;position: absolute;top: 0;left: 0;}
.shopInfo .conBox .btnGoShop{width: 224rpx;height: 69rpx;position: absolute;bottom: calc(53rpx + 52px + env(safe-area-inset-bottom));left: 0;right: 0;margin: auto;}

/* btnJump */
.btnJump{width: auto;height: 20rpx;position: absolute;top: 0;right: 0;z-index: 10;font-size: 20rpx;color: #fff;padding: 47rpx 40rpx;}














