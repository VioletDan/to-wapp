view { position: relative; }
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.addressList {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.addressList .popupSearchBtn {
  background-color: #fff;
}

.addressList .box {
  height: calc(100% - 460rpx);
  overflow: hidden;
  position: relative;
}

.addressList .box .searchAddress {
  flex-grow: 0;
}
 .addressScrollView {
  height: calc(100% - 148rpx);
}
 .addressScrollView > scroll-view {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
 .addressScrollView .addressItem {
  height: 135rpx;
  border-bottom: 1px solid #f0f0f0;
  box-sizing: border-box;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
 .addressScrollView .addressItem > .leftAddress {
  flex: 1;
  overflow: hidden;
}
 .addressScrollView .addressItem > .leftAddress > view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
 .addressScrollView .addressItem > .leftAddress > view:first-child {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}
 .addressScrollView .addressItem > .leftAddress > view:nth-child(2) {
 font-size: 26rpx;
 color: #a6a6a6;
}
 .addressScrollView .addressItem > .icon_tick {
  width: 40rpx;
  font-size: 34rpx;
  font-weight: 700;
  display: none;
}
 .addressScrollView .addressItem > .icon_tick.show {
  display: block;
}

.box .save {
  width: 670rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  border-radius: 8rpx;
  text-align: center;
  background-color: #343434;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  margin: auto;
}