.van-toast__container{top: 45%;}
page {
  background-color: #f7f7f7;
  width: 100%;
  height: 100%;
}

.addAddress {  
  /* padding-top: 23rpx; */
  height: 100%;
}
.addAddress .form {
  padding: 0 30rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.addAddress .form > view {
  display: flex;
  align-items: center;
  height: 90rpx;
  box-sizing: border-box;
  background-color: var(--color24);
  margin-top: 24rpx;
}
.addAddress .form > view > text:first-child {
  font-weight: 700;
  width: 207rpx;
  padding-left: 30rpx;
  color: var(--color40);
  box-sizing: border-box;
}
.addAddress .form > view > input{
  color: var(--color41);
}
.addAddress .form > view.gender > .radio {
  display: flex;
  align-items: center;
}
.addAddress .form > view.gender > .radio > radio {
  transform:scale(0.7);
}
.addAddress .form > view.gender .male {
  margin-right: 60rpx;
}
.addAddress .form > view.address text:nth-child(2) {
  /* flex-grow: 1; */
  /* display: flex; */
  align-items: center;
  width: calc(100% - 178rpx);
  display: block;
  /* padding-right: 20rpx; */
  margin-left: 26rpx;
  color: var(--color41);
}
.addAddress .form > view.address text:nth-child(2).empty {
  color: var(--color43);
}
.addAddress .form > view.address text:last-child {
  transform: rotate(-90deg);
  font-size: 26rpx;
  margin-right: 20rpx;
}
.addAddress .form > view.defaultAddress .radio {
  display: flex;
  align-items: center;
  color: var(--color9);
  font-size: 28rpx;
}
.addAddress .form > view.defaultAddress .radio > radio {
  transform:scale(0.7);
}
.addAddress .form > view.defaultAddress .radio checkbox {
  transform:scale(0.7);
}
.addAddress .form > view.defaultAddress .radio checkbox .wx-checkbox-input {
  border-radius: 50%;
}
.addAddress .form > view.defaultAddress .radio checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #000;
}
.addAddress .save {
  display: flex;
  justify-content: center;
  width: 554rpx;
  height: 61rpx;
  line-height: 61rpx;
  color: var(--white);
  font-size: 28rpx;
  background-color: var(--color3);
  position: absolute;
  bottom: 175rpx;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 0;
  letter-spacing: 45rpx;
}