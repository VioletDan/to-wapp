/* pages/userCoupon/userCoupon.wxss */
.article{ background-color: var(--color23);}
.article .orderInfoScroll{height: 100%;}
.orderInfoScroll .box .flexBox{display: flex;justify-content: space-between;align-items: center;}
.orderInfoScroll .couponList{height: 100%;padding: 34rpx 20px;}
.orderInfoScroll .couponList .couponListItem{width: 100%;height: 208rpx;margin-bottom: 34rpx;}
/* left */
.orderInfoScroll .couponList .couponListItem .left{width: 580rpx;background-color: var(--white);height: 100%;border-top-left-radius:12rpx;border-bottom-left-radius:12rpx;box-shadow:1rpx 0px 15rpx var(--color32);padding: 30rpx 0 20rpx 30rpx;}
.orderInfoScroll .couponList .couponListItem .left .txt1{font-size: 34rpx;color: var(--color47);}
.orderInfoScroll .couponList .couponListItem .left .date{width: 376rpx; font-size: 26rpx;color: var(--color48);padding: 25rpx 0;border-bottom: 1px solid var(--color49);}
.orderInfoScroll .couponList .couponListItem .left .btnCheck{font-size: 26rpx;color: var(--color50);margin-top: 20rpx;}
.orderInfoScroll .couponList .couponListItem .left .btnTips{width: 88rpx;height: 29rpx;line-height: 29rpx;text-align: center; font-size: 18rpx;color: var(--white);background-color: var(--color3);position: absolute;top: 32rpx;right: 105rpx;}

/* right */
.orderInfoScroll .couponList .couponListItem .right{width: calc(100% - 508rpx);background-color: var(--color3);height: 100%;border-top-right-radius:12rpx;border-bottom-right-radius:12rpx;text-align: center;color: var(--white);display: flex;justify-content: center;align-items: center;}
.orderInfoScroll .couponList .couponListItem .right .txt{font-size: 67.27rpx;}
.orderInfoScroll .couponList .couponListItem .right .txt2{font-size: 32rpx;top: 10rpx;position: relative;}
.orderInfoScroll .couponList .couponListItem .right .btnTxt3{color: var(--white);font-size: 22rpx;margin-top: 15rpx;display: block;}
.orderInfoScroll .couponList .couponListItem .right .circle_list{position:absolute!important;top: 0; left: -3px;}
.orderInfoScroll .couponList .couponListItem .right .circle_list:after{  content: '';  position: absolute;  top: 0;  bottom: 0;  left: 14rpx;  right: 0;  z-index: 1;  background-color: var(--white);  }  
.orderInfoScroll .couponList .couponListItem .right .circle_list>text{display: block;background-color:var(--white);  width:13rpx;  height:13rpx;  border-radius:50%;  margin-bottom:5rpx;}  

/* noList */
.orderInfoScroll .couponList .noList{font-size: 26rpx;text-align: center;color: var(--color51);margin-top: 90rpx;}