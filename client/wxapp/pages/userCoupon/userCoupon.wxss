/* pages/userCoupon/userCoupon.wxss */
view { position: relative; }
.article{ background-color: var(--color23);}
.article .orderInfoScroll{height: calc(100% - 98rpx);}
.orderInfoScroll .box .flexBox{display: flex;justify-content: space-between;align-items: center;}
.orderInfoScroll .couponList{height: 100%;padding: 34rpx 20px;}
.orderInfoScroll .couponList .couponListItem{width: 100%;height: 208rpx;margin-bottom: 34rpx;}
/* left */
.orderInfoScroll .couponList .couponListItem .left{width: calc(100% - 200rpx);background-color: var(--white);height: 100%;border-top-left-radius:12rpx;border-bottom-left-radius:12rpx;box-shadow:1rpx 0px 15rpx var(--color32);padding: 30rpx 0 20rpx 30rpx;}
.orderInfoScroll .couponList .couponListItem .left .txt1{font-size: 34rpx;color: var(--color47);}
.orderInfoScroll .couponList .couponListItem .left .date{width: 376rpx; font-size: 26rpx;color: var(--color48);padding: 25rpx 0;border-bottom: 1px solid var(--color49);}
.orderInfoScroll .couponList .couponListItem .left .btnCheck{font-size: 26rpx;color: var(--color50);margin-top: 5rpx;}
.orderInfoScroll .couponList .couponListItem .left .btnTips{width: 88rpx;height: 29rpx;line-height: 29rpx;text-align: center; font-size: 18rpx;color: var(--white);background-color: var(--color3);position: absolute;top: 32rpx;right: 80rpx;}

/* right */
.orderInfoScroll .couponList .couponListItem .right{width: 200rpx;background-color: var(--color3);height: 100%;border-top-right-radius:12rpx;border-bottom-right-radius:12rpx;text-align: center;color: var(--white);display: flex;justify-content: center;align-items: center;}
.orderInfoScroll .couponList .couponListItem .right .txt{font-size: 67.27rpx;}
.orderInfoScroll .couponList .couponListItem .right .txt2{font-size: 32rpx;position: relative;}
.orderInfoScroll .couponList .couponListItem .right .btnTxt3{color: var(--white);font-size: 22rpx;margin-top: 15rpx;display: block;}
.orderInfoScroll .couponList .couponListItem .right .btnTxt4{font-size: 14rpx;color: var(--color3);height: 18rpx;width: 82rpx;line-height: 18rpx;background-color: var(--white);border-radius: 10rpx;display: block;position: absolute; bottom: 20rpx;margin: auto;}
.orderInfoScroll .couponList .couponListItem .right .circle_list{position:absolute!important;top: 0; left: -3px;}
.orderInfoScroll .couponList .couponListItem .right .circle_list:after{  content: '';  position: absolute;  top: 0;  bottom: 0;  left: 14rpx;  right: 0;  z-index: 1;  background-color: var(--white);  }  
.orderInfoScroll .couponList .couponListItem .right .circle_list>text{display: block;background-color:var(--white);  width:13rpx;  height:13rpx;  border-radius:50%;  margin-bottom:5rpx;}  

/* noList */
.orderInfoScroll .couponList .noList{font-size: 26rpx;text-align: center;color: var(--color51);margin-top: 90rpx;}


.orderInfoScroll .couponList .couponListItem.type2{filter: grayscale(100%);pointer-events: none;}


/* btn */
.btn{width: 100%;height: 98rpx;background-color: var(--white);line-height: 98rpx;text-align: center;font-size: 26rpx;color: var(--color3);}
.btn1{display: none;}
.btn2{display: block;}

/* boxType2 */
.article.boxType2 .orderInfoScroll .couponList{padding: 34rpx 20rpx 34rpx 75rpx;}
.article.boxType2 .orderInfoScroll .couponList .couponListItem .left .btnTips{right: 45rpx;}
.article.boxType2 .orderInfoScroll .couponList .couponListItem::before{content: '';font-size: 20rpx;text-align: center;line-height: 25rpx;color: var(--white); width: 25rpx;height: 25rpx;background-color: var(--color26);border-radius: 50%;position: absolute;top: 50%;transform: translateY(-50%);left: -50rpx;transition: all 300ms;} 
.article.boxType2 .orderInfoScroll .couponList .couponListItem.active::before{content: '';background-color: var(--color3);background-image: url(data:image/png;base64,);background-position: 50% 50%; background-repeat: no-repeat; background-size:100% 100%;}

.article.boxType2 .btn1{display: block;}
.article.boxType2 .btn2{display: none;}

.article .btnCheck2{display: none;}
.article.boxType2 .btnCheck1{display: none;}
.article.boxType2 .btnCheck2{display: block;}

.popupBox{width: 100%;height: 100%;position: absolute;top: 0;left: 0;}
.popupBox .mask{width: 100%;height: 100%;position: absolute;top: 0;left: 0;background-color: rgba(0, 0, 0, 0.62);}
.popupBox .conBox{width: 690rpx;height: 675rpx;position: absolute;top: 50%;left: 50%;transform:translate(-50%,-50%);background-color: var(--white);border-radius: 10rpx;padding-top: 33rpx;}
.popupBox .conBox .title{text-align: center;font-size: 32rpx;color: var(--color25);}
.popupBox .conBox .scrollBox{width: 100%;height: 445rpx;padding: 0 35rpx;margin-top: 54rpx;}
.popupBox .conBox .scrollBox .scroll{width: 100%;height: 100%;}
.popupBox .conBox .btn{width: 206rpx;height: 50rpx;line-height: 50rpx;border-radius: 25rpx;font-size: 30rpx;color: var(--white);background-color: var(--color3);margin: 0 auto;}
