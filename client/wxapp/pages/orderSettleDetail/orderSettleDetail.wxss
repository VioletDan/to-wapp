/**标准16:9*/
page { height: 100%; background-color: var(--color24);}
.article { width: 100%; height: 100%;overflow: hidden;}
.orderInfoScroll{height: 100%;}
.orderInfoScroll .box .iconCommon{color: #a7a7a7;}
.orderInfoScroll .box .commonB{padding-top: 35rpx;}
.orderInfoScroll .box{border-top: 1rpx solid transparent;}
.orderInfoScroll .box .cardListBox .remarksBox .iconCommon{padding-left: 30rpx;margin-top: 5rpx;}
.orderInfoScroll .box .cardListBox .flexBox2{ justify-content: flex-start;font-size: 24rpx;color:var(--color28);}
.orderInfoScroll .box .cardListBox .flexBox2 .right{color: var(--color27);padding-left: 50rpx;font-size: 30rpx;}
.orderInfoScroll .box .commonB .typeSelect{justify-content: flex-start;}
.orderInfoScroll .box .commonB .typeSelect>view{color:var(--color28);font-size: 24rpx;margin-bottom: 20rpx;}
.orderInfoScroll .box .commonB .typeSelect .title{}
.orderInfoScroll .box .commonB .typeSelect .right{text-align: left;margin-left: 20rpx;}
.orderInfoScroll .box .commonTitle{padding-left: 15rpx;}
/* orderRedaus */
.orderRedaus{background-color: var(--white);width: 713rpx;height: auto;border-top-left-radius: 30rpx;border-top-right-radius: 30rpx;margin: 35rpx auto 0;box-shadow:1rpx 0px 15rpx var(--color32);padding-bottom: 40rpx;}
.orderRedaus .orderStatusInfo{text-align: center;font-size: 32rpx;color: var(--color3);padding: 50rpx 30rpx 0rpx;}
.orderRedaus .countDownBox{text-align: center;color: var(--color11);font-size:32rpx;}
.orderRedaus .countDownBox .van-count-down{display: inline-block;color: var(--color11);font-size:32rpx;}
.orderInfoScroll .guideTopRight {height: auto;margin: 80rpx auto 0;}
.orderInfoScroll .guideTopRight .type {width: 330rpx;height: 122rpx;}
.orderInfoScroll .guideTopRight2{justify-content: center;}


.orderRedaus .stepBox{font-size: 22rpx;}
.orderRedaus .stepBox .desTxt{font-size: 22rpx;}
.orderRedaus .stepBox .title{font-size: 28rpx;color: #676767;padding-left: 30rpx;}

.orderInfoScroll .box .orderAdress{padding-top: 30rpx;}
.orderInfoScroll .box .orderAdress .typeSelect:nth-child(2)>.left,.orderInfoScroll .box .orderAdress .typeSelect:nth-child(3)>.left{color: var(--color25);}
.orderInfoScroll .box .paymentTypeBox{padding: 45rpx 0 0 15rpx;border-top: 1rpx solid var(--color44);}

/* peisongAdress */
.orderInfoScroll .box .peisongAdress{padding: 80rpx 52rpx 0 52rpx; }
.orderInfoScroll .box .peisongAdress .typeSelect{justify-content: space-between;font-size: 30rpx;color: var(--color31);}
.orderInfoScroll .box .peisongAdress .typeSelect:last-child{color: var(--color27);margin-top: 20rpx;}
.orderInfoScroll .box .peisongAdress .iconTel{vertical-align: middle;display: inline-block;margin-left: 23rpx;width: 50rpx;height: 50rpx;}

.orderInfoScroll .box .foodCode{color:  var(--color3);font-size: 52rpx;text-align: center;padding: 34rpx 0;}

/* totalBoxDetail */
.orderInfoScroll .box .cardListBox .totalBoxDetail{color: var(--color20);margin-bottom: 20rpx;margin-left: 15rpx;}
.orderInfoScroll .box .cardListBox .totalBoxDetail .left{font-size: 25rpx;}
.orderInfoScroll .box .cardListBox .totalBoxDetail .right{font-size: 35rpx;font-weight: 700;}

.codeBox{margin: 25rpx auto;border: 1rpx solid var(--color3);overflow: hidden;width: 260rpx;height: 260rpx;position: relative;}
.codeBox canvas{position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);}
