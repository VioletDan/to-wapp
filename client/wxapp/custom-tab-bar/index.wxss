
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 52px;
  background: #001445;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  transform: all 300ms;
}

.tab-bar-border {
  background-color: #b3925c;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .icon {
  width: 18.5px;
  height: 17px;
}

.tab-bar-item .iconTxt {
  font-size: 9px;
  margin-top: 2.5px;
  color: #e8c892;
}
