
@import '../../app.wxss';
.conBox{width: 100%;height: 100%;}
.home {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
}

.home .icon_light_bulb {
  color: gold;
}

/* 门店信息 start */

.guide {
  padding: 10rpx 38rpx 0 30rpx;
}

.guide.fullPageInfo {
  height: 100%;
}

.guide .guideTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.guide .guideTop .guideTopLeft {
  display: flex;
  align-items: center;
}

.guide .guideTop .guideTopLeft .iconfont {
  margin-right: 16rpx;
  font-size: 26rpx;
}

.guide .guideTop .guideTopLeft .storeName {
  font-size: 30rpx;
  font-weight: 700;
  margin-right: 10rpx;
}

.guide .guideTop .guideTopRight {
  font-size: 24rpx;
}

.guide .distance {
  color: #878787;
  font-size: 26rpx;
  margin: 4rpx 0 35rpx 0;
}

.guide .storeIntro {
  color: #878787;
  font-size: 24rpx;
  height: 60rpx;
}

.guide .storeDetails {
  display: inline-block;
  width: calc(100% - 118rpx);
  vertical-align: middle;
  font-size: 22rpx;
}
.guide .storeDetails.hideDetail {
  display: none;
}

.guide .storeDetails iconfont {
  display: inline-block;
  vertical-align: middle;
}

.guide .storeDetails > view.oneHide {
  width: calc(100% - 36rpx);
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
}

.guide .storeIntro .moreTxt {
  float: right;
  width: 118rpx;
  font-size: 22rpx;
  color: #9e9e9e;
  padding: 0 10rpx 0 25rpx;
  box-sizing: border-box;
  vertical-align: middle;
  margin-top: 4rpx;
}

.guide .storeIntro .moreTxt .iconfont {
  display: inline-block;
  margin-left: 10rpx;
  font-size: 20rpx;
  transition: all 200ms;
}

.guide .storeIntro .moreTxt .iconfont.active {
  transform: rotate(180deg);
}

.guide .openStoreDetail {
  font-size: 20rpx;
  color: #9e9e9e;
  display: none;
  transition: all 200ms;
}

.guide .openStoreDetail.showDetail {
  display: block;
}

.guide .openStoreDetail.showDetail .storeDetails iconfont {
  vertical-align: top;
}

.guide .openStoreDetail.showDetail .storeDetails > view {
  display: inline-block;
  width: calc(100% - 36rpx);
  line-height: 1.4;
}

.guide .openStoreDetail.showDetail .storeDetailsTitle {
  font-size: 26rpx;
  font-weight: 700;
  margin: 20rpx 0;
  color: #000;
}

/* 门店信息 end */

.dishList {
  width: 100%;
  flex: 1;
  overflow: hidden;
  display: flex;
}

.dishList .categoryList {
  width: 160rpx;
  height: 100%;
  max-height: 100%;
  background-color: #f6f6f6;
}

.dishList .categoryList .categoryItem {
  width: 100%;
  height: 125rpx;
  position: relative;
  padding: 0 20rpx 0 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.dishList .categoryList .categoryItem.active {
  background-color: #fff;
}

.dishList .categoryList .categoryItem.active::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background-color: #d3aa79;
}

.dishList .categoryList .categoryItem .iconfont {
  display: inline-block;
  vertical-align: middle;
  margin-right: 5rpx;
  color: gold;
}

.dishList .categoryList .categoryItem text {
  color: #9a9a9a;
  font-size: 28rpx;
  vertical-align: middle;
  letter-spacing: 4rpx;
}

.dishList .categoryList view {
  height: 700rpx;
}

.dishList .detailsList {
  flex: 1;
  height: 100%;
}
.dishList .detailsList .catogoryBottom {
  width: 100%;
  height: 100rpx;
}
.dishList .detailsList .dishMenuContent {
  padding-right: 60rpx;
}

.dishList .detailsList .dishMenuItemTitle {
  color: #6d6d6d;
  font-size: 24rpx;
  margin-bottom: 60rpx;
  padding-left: 20px;
  padding-top: 20rpx;
}

.dishList .detailsList .dishMenuItem {
  height: 270rpx;
  display: flex;
}

.dishList .detailsList .dishMenuItem .img {
  width: 180rpx;
  height: 270rpx;
  text-align: center;
  line-height: 270rpx;
}

.dishList .detailsList .dishMenuItem .img image {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
}

.dishList .detailsList .dishMenuItem .dishDetails {
  flex: 1;
}

.dishList .detailsList .dishMenuItem .dishDetails .dishDetailsTitle {
  font-size: 29rpx;
  font-weight: 700;
  margin-bottom: 25rpx;
}

.dishList .detailsList .dishMenuItem .dishDetails .dishDetailsSubTitle {
  font-size: 20rpx;
  color: #9d9d9d;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: 25rpx;
}

.dishList .detailsList .dishMenuItem .dishDetails .operate .price {
  font-size: 27rpx;
  font-weight: 700;
}

.dishList .detailsList .dishMenuItem .dishDetails .operate .price {
  font-size: 27rpx;
  font-weight: 700;
}

.dishList .detailsList .dishMenuItem .dishDetails .operate .selectCate {
  float: right;
  color: #d8a974;
}

/* 规格模态框 start */
.modal {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.3);
  padding: 80rpx 40rpx;
  box-sizing: border-box;
  display: none;
}
.modal.showModal {
  display: block;
  width: 100%;
}
.modal .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.modal .modalView {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 40rpx;
  right: 40rpx;
  margin: auto;
  /* width: 100%; */
  max-height: 100%;
  overflow: hidden;
  background-color: #fff;
  border-radius: 14rpx;
  z-index: 10;
  display: flex;
}
.modal .modalView .modalOperate {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  z-index: 10;
}
.modal .modalView .modalOperate text:first-child {
  margin-right: 24rpx;
}
.modal .modalView .modalOperate .iconfont {
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 28rpx;
  background-color: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
}
.modal .modalView swiper {
  width: 100%;
  height: 378rpx;
  box-sizing: border-box;
}
.modal .modalView .position {
  position: absolute;
  right: 32rpx;
  top: 265rpx;
  z-index: 10;
  padding: 0 10rpx;
  height: 34rpx;
  line-height: 34rpx;
  border-radius: 15rpx;
  background-color: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 22rpx;
}
.modal .modalView .modelContentShow {
  width: 100%;
  max-height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.modal .modalView swiper swiper-item {
  overflow: hidden;
  height: 100%;
}
.modal .modalView swiper swiper-item image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.modal .modalView .scrollView {
  width: 100%;
  height: calc(100% - 378rpx - 225rpx);
  box-sizing: border-box;
}
.modal .modalView .scrollView scroll-view {
  height: 100%;
}
.modal .modalView .scrollView .scrollViewBox {
  padding: 0 77rpx 0 36rpx;
  transition: height 1000ms;
}
.modal .modalView .scrollView .scrollViewBox .seatBox {
  height: 0;
  animation: scroll_ani 100ms linear both;
}
@keyframes scroll_ani {
  0% {
    height: 0;
  }
  100% {
    height: 30rpx;
  }
}
.modal .modalView .scrollView .modalTitle {
  font-size: 32rpx;
  font-weight: 700;
  margin: 30rpx 0 10rpx 0;
}
.modal .modalView .scrollView .component {
  display: inline-block;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 8rpx;
  background-color: #f6f6f6;
  color: #c9c9c9;
  font-size: 20rpx;
  margin-bottom: 14rpx;
}

.modal .modalView .scrollView .modalDescribTitle {
  margin-bottom: 20rpx;
}
.modal .modalView .scrollView .modalDescribText {
  margin-bottom: 45rpx;
}

.modal .modalView .scrollView .modalDescribTitle,
.modal .modalView .scrollView .modalDescribText,
.modal .modalView .scrollView .configTitle {
  font-size: 22rpx;
  color: #9d9d9d;
}
.modal .modalView .scrollView .configMenu {
  margin-bottom: 50rpx;
}
.modal .modalView .scrollView .configMenu .configTitle {
  margin-bottom: 24rpx;
}
.modal .modalView .scrollView .configMenu .selectConfigCard {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 24rpx;
  border-radius: 6rpx;
  background-color: #f5f5f6;
  color: #000;
  font-size: 22rpx;
  margin-right: 35rpx;
}
.modal .modalView .scrollView .configMenu .selectConfigCard.select {
  background-color: #d3aa79;
  color: #fff;
}
.modal .modalView .scrollView .configMenu .selectConfigCard .icon {
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  position: relative;
}
.modal .modalView .scrollView .configMenu .selectConfigCard .icon .icon_star {
  position: absolute;
  top: -24rpx;
  right: -6rpx;
  font-size: 22rpx;
  color: #d3aa79;
}
.modal
  .modalView
  .scrollView
  .configMenu
  .selectConfigCard.select
  .icon
  .icon_star {
  color: #fbeba1;
}

.modal .modalView .cofigFooter {
  width: 100%;
  height: 225rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #f1f1f1;
  padding: 0 40rpx;
}
.modal .modalView .cofigFooter .priceDetail {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 26rpx;
}
.modal .modalView .cofigFooter .priceDetail .leftDetail .price {
  font-size: 28rpx;
  font-weight: 700;
  color: #d1a672;
}
.modal .modalView .cofigFooter .priceDetail .leftDetail .selectConfig {
  font-size: 22rpx;
  color: #acacac;
}
.modal .modalView .cofigFooter .priceDetail .addNum > text {
  vertical-align: middle;
}
.modal .modalView .cofigFooter .priceDetail .addNum .iconfont {
  display: inline-block;
  border-radius: 25rpx;
  font-size: 50rpx;
  text-align: center;
}
.modal .modalView .cofigFooter .priceDetail .addNum .iconfont.icon_reduce {
  color: #e0e0e0;
}
.modal .modalView .cofigFooter .priceDetail .addNum .iconfont.icon_add {
  color: #e8d4bb;
}
.modal .modalView .cofigFooter .priceDetail .addNum .addNumText {
  margin: 0 24rpx;
  color: #8c8c8c;
}
.modal .modalView .cofigFooter .addCar {
  font-size: 26rpx;
  color: #fff;
  background-color: #d3aa79;
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  line-height: 80rpx;
  text-align: center;
}
/* 规格模态框 end */

/* 购物车列表 start */
.home .cardList {
  position: fixed;
  bottom: -100rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  transition: bottom 200ms;
  z-index: 20;
}
.home .cardList.show {
  bottom: 0;
}
.home .cardList .cardListLeft {
  flex: 1;
  background-color: #e7e7e7;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 33rpx;
  font-weight: 700;
  font-size: 28rpx;
}
.home .cardList .cardListLeft .selectNum {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #d3aa79;
  border-radius: 30rpx;
  color: #fff;
}
.home .cardList .cardListLeft .totalPrice {
  color: #000;
}
.home .cardList .cardListRight {
  font-size: 28rpx;
  font-weight: 700;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #d3aa79;
  color: #fff;
}
.home .cardMask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
}
.home .cardMask .cardDetailContent {
  position: absolute;
  width: 100%;
  bottom: 100rpx;
}
.home .cardMask .cardDetailContent .cardDetail {
  height: 75rpx;
  font-size: 22rpx;
  color: #909090;
  line-height: 75rpx;
  padding-left: 30rpx;
  background-color: #f7f7f7;
}
.home .cardMask .cardDetailContent .cardDetail .iconfont {
  font-size: 22rpx;
  margin-right: 6rpx;
}
.home .cardMask .cardDetailContent .cardDetailList {
  background-color: #fff;
  padding: 17rpx 30rpx;
}
.home .cardMask .cardDetailContent .cardDetailList > view:not(:first-child) {
  margin-top: 17rpx;
}
.home .cardMask .cardDetailContent .cardDetailList .cardDetailListCard {
  display: flex;
  justify-content: space-between;
}
.home
  .cardMask
  .cardDetailContent
  .cardDetailList
  .cardDetailListCard
  .cardDetailListCardLeft
  > view:first-child {
  font-size: 26rpx;
  margin-bottom: 15rpx;
}
.home
  .cardMask
  .cardDetailContent
  .cardDetailList
  .cardDetailListCard
  .cardDetailListCardLeft
  > view:nth-child(2) {
  font-size: 22rpx;
  color: #929292;
}
.home
  .cardMask
  .cardDetailContent
  .cardDetailList
  .cardDetailListCard
  .cardDetailListCardRight {
  font-size: 24rpx;
  color: #929292;
  display: flex;
  align-items: center;
}
.home
  .cardMask
  .cardDetailContent
  .cardDetailList
  .cardDetailListCard
  .cardDetailListCardRight
  > text:first-child {
  margin-right: 20rpx;
}
/* 购物车列表 end */

