/* components/order/order.wxss */
@import "../../app.wxss";
view { position: relative; }
.content { width: 100%; height: 100%;overflow: hidden;background-color: var(--color24);}
.topBabs .van-hairline--top-bottom:after {border-top: none;}
.listBox .flexBox{display: flex;justify-content: space-between;align-items: center;}
.listBox {height: 100%;overflow: hidden;}
.listBox .listBoxscroll{height: 100%;}
.listBox .listItem{width: 100%;background-color: #fff;margin-top: 20rpx;box-sizing: border-box;padding: 35rpx 35rpx 24rpx 45rpx;}
.listBox .listItem .top {font-size: 28rpx}
.listBox .listItem .top .storeName {text-align: left;color: var(--color27);font-size: 30.4rpx;}
.listBox .listItem .top .storeName .storeImg{width: 40rpx;height: 40rpx;vertical-align: middle;display: none;}
.listBox .listItem .top .storeName .type{width: 72rpx;height: 45rpx;display: inline-block;background-color: var(--color3);color: var(--white);font-size: 24rpx;line-height: 45rpx;text-align: center;border-radius: 25rpx;margin-left: 20rpx;}
.listBox .listItem .top .storeName .icon_arrow_right {font-size: 28rpx;}
.listBox .listItem .top .orderStatus{color: var(--color27);font-size: 30.4rpx;}
.listBox .listItem .center .imgList{width: 100%;padding: 25rpx 0;overflow: hidden;white-space: nowrap;}
.listBox .listItem .center .imgList .listFood{overflow: hidden;margin-right: 20rpx;}
.listBox .listItem .center .imgList .img{width: 120rpx;height: auto;vertical-align: middle;float: left;}
.listBox .listItem .center .imgList .info{float: left;margin-left: 45rpx;}
.listBox .listItem .center .imgList .info .txt1{font-size: 27rpx;color: var(--color1);}
.listBox .listItem .center .imgList .info .txt2{font-size: 20rpx;color: var(--color4);margin-top: 22rpx;display: block;}
.listBox .listItem .center .iconCommon{color: var(--color27);font-size: 30.4rpx;position: absolute;top: 50%;transform: translateY(-50%);right: 0;}

.listBox .listItem .bottom{color:var(--color31);font-size: 17rpx;}
.listBox .listItem .bottom .tips{color: #d2ad7d;margin-bottom: 10rpx;}
.listBox .listItem .bottom .num{margin-bottom: 10rpx;}
.listBox .listItem .bottom .totalPrize{color: var(--color7);font-weight: 700;font-size: 35rpx;}
.listBox .listItem .buttonBox .btn{font-size: 24rpx;width: 146rpx;height: 56rpx;margin-top: 36rpx;border: 1rpx solid #d2ad7d;text-align: center;color: #d2ad7d;line-height: 56rpx;}

.noData{color: #000;font-size: 30rpx;text-align: center;position: absolute;top: 50%;left: 50%;transform: translate(-50%,0);}


