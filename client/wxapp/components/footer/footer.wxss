@import "../../common/css/common.wxss";

.menuTab {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  background: #001445;
  height: 104rpx;
  text-align: center;
  border-top: 1px solid #b3925c;
  display: flex;
}

.menuTab .item {
  font-size: 0;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.menuTab .item .icon {
  width: 37rpx;
  height: 34rpx;
  display: inline-block;
}

.menuTab .item text {
  font-size: 18rpx;
  margin-top: 7rpx;
  color: #e8c892;
}

.menuTab .item .btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.menuTab .active text {
  color: #e8c892;
}

/** iphoneX */

@media screen and (width:375px) and (min-height:724px),
       screen and (width:414px) and (min-height:808px) {
  .footerTab {
    height: 158rpx !important;
  }

  .menuTab .item {
    top: -20rpx !important;
  }
}
