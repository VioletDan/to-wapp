@import "../../common/css/common.wxss";

.menuTab {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  background: #f6f6f6;
  height: 88rpx;
  text-align: center;
  border-top: 1px solid #e6e6e6;
  display: flex;
}

.menuTab .item {
  font-size: 0;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.menuTab .item .icon {
  width: 40rpx;
  height: 38rpx;
  display: inline-block;
}

.menuTab .item text {
  font-size: 18rpx;
  margin-top: 10rpx;
  color: #b5b5b5;
}

.menuTab .item .btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.menuTab .active text {
  color: #1b1b1b;
}

